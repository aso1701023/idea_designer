<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="jp.ac.asojuku.st.idea_designer">
    <!-- BLEの機能を使用する宣言 -->
    <uses-feature
            android:name="android.hardware.bluetooth_le"
            android:required="true"/> <!-- BLEの機能を使用するためのパーミッションの宣言 -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/> <!-- ネットワークから位置情報を取得することを許可する -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".EntryActivity">
        </activity>
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LastIdeaListActivity">
        </activity>
        <activity android:name=".AddIdeaActivity">
        </activity>
        <activity android:name=".NoteItemActivity">
        </activity>
        <activity android:name=".NoteIdeaActivity">
        </activity>
        <activity android:name=".IdeaListActivity">
        </activity>
        <activity android:name=".IdeaActivity">
        </activity>
        <activity android:name=".MakeActivity">
        </activity>
        <activity android:name=".SwichActivity">
        </activity>
    </application>

</manifest>