<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EntryActivity">

    <ImageView
            android:layout_width="417dp"
            android:layout_height="100dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/entry_menubar" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/entry_edit_password"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/entry_menubar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.189"
            android:hint="パスワードを入力"
            app:layout_constraintEnd_toStartOf="@+id/entry_button_search" app:layout_constraintHorizontal_bias="0.968"/>
    <Button
            android:text="検索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entry_button_search"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            app:layout_constraintTop_toTopOf="@+id/entry_edit_password"/>
    <TextView
            android:text="グループを探す"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entry_text_title" app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/entry_menubar"/>
    <TextView
            android:text="開始までお待ちください"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entry_text_state" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/entry_menubar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="20sp" android:visibility="invisible"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entry_text_grope" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/entry_menubar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.386" android:visibility="invisible" android:textSize="24sp"/>

</android.support.constraint.ConstraintLayout>