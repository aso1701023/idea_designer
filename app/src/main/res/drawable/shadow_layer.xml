<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="4dp">
    <!-- 影のレイヤー -->
    <item android:top="3dp" android:bottom="3dp" android:background="#E7E7E7">
        <shape android:shape="rectangle">
            <solid android:color="#66404040" />
        </shape>
    </item>
    <!-- 枠のレイヤー -->
    <item android:left="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                    android:width="1dp"
                    android:color="#ff3b52e2"
            />
        </shape>
    </item>
</layer-list>