<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IdeaActivity">

    <ImageView
            android:layout_width="417dp"
            android:layout_height="0dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/recycler_image_background" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
    />
    <Button
            android:text="fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idea_button_nextpage"
            app:layout_constraintTop_toBottomOf="@+id/recycler_image_background" android:layout_marginBottom="134dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="てーま"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:id="@+id/idealist_text_thema" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="39dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="122dp"
            android:layout_marginStart="122dp" app:layout_constraintEnd_toStartOf="@+id/idealist_text_time"
            android:layout_marginEnd="39dp" android:layout_marginRight="39dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/idea_edit_idea" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="310dp"
            android:layout_height="317dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/idealist_text_time" android:layout_marginBottom="333dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="76dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="76dp" android:layout_marginEnd="76dp" android:layout_marginRight="76dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/idealist_text_time" android:layout_marginTop="100dp"
            app:layout_constraintStart_toEndOf="@+id/idealist_text_thema" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="109dp" app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="230dp"
            android:inputType="textMultiLine|textPersonName"
            android:background="@drawable/edit_main"
            android:ems="10"
            android:id="@+id/idea_edit_idea"
            android:lines="7" app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4" android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="@+id/imageView4" android:gravity="center" android:hint="アイデア"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="53dp"
            android:inputType="textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/idea_edit_detail"
            android:lines="1" style="@style/Widget.AppCompat.AutoCompleteTextView" android:scrollbars="vertical"
            android:background="@drawable/edit_main" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/idea_edit_idea"
            app:layout_constraintStart_toStartOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="@+id/imageView4"
            android:gravity="center_vertical" android:hint="補足説明"/>
</android.support.constraint.ConstraintLayout>