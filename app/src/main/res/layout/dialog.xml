<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@color/colorAccent"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:paddingLeft="14dp" android:paddingTop="12dp"
                                             android:paddingRight="12dp" android:paddingBottom="2dp">

    <TextView
            android:background="@drawable/edit_main"
            android:text="idea"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center|center_horizontal"
            android:id="@+id/dialog_idea"
            android:gravity="center" android:lines="3" android:isScrollContainer="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintTop_toTopOf="parent"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_idea" android:id="@+id/dialog_list"
            android:layout_marginTop="8dp" android:background="@drawable/edit_main"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp" app:srcCompat="@android:drawable/arrow_down_float"
            android:id="@+id/dialog_image_close"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/dialog_list"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_button_addidea" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.615" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_text_detail"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/dialog_button_additem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.538" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_text_detail"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp" android:background="#8A8A8A"
            android:id="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/dialog_image_close"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_text_detail"
            android:background="@drawable/edit_main"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
</android.support.constraint.ConstraintLayout>