<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MakeActivity">

    <ImageView
            android:layout_width="417dp"
            android:layout_height="100dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/make_spinner_commentConfig"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
    />
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/make_spinner_idea"
            app:layout_constraintEnd_toEndOf="@+id/make_spinner_join"
            app:layout_constraintStart_toStartOf="@+id/make_spinner_join"
            app:layout_constraintBottom_toTopOf="@+id/make_spinner_join" android:layout_marginBottom="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/make_button_member"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/make_spinner_commentConfig"
            android:text="参加待機人数 : 読み込み中"/>
    <Button
            android:text="GOGOGO"
            android:layout_width="105dp"
            android:layout_height="0dp"
            android:id="@+id/make_button_finish"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/make_text_password"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/make_text_password"
            tools:text="PW : 読み込み中・・・"
            app:layout_constraintStart_toStartOf="@+id/textView7" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/make_button_member"/>
    <TextView
            android:text="アイデアフェーズ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintBottom_toBottomOf="@+id/make_spinner_idea"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/make_spinner_idea"/>
    <TextView
            android:text="ジョインフェーズ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/make_spinner_join"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/make_spinner_join"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/make_spinner_review"
            app:layout_constraintEnd_toEndOf="@+id/make_spinner_review"
            android:id="@+id/make_spinner_join" app:layout_constraintStart_toStartOf="@+id/make_spinner_review"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="レビューフェーズ"
            app:layout_constraintBottom_toBottomOf="@+id/make_spinner_review" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/make_spinner_review"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.312"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/make_spinner_review"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/make_edit_thema"
            android:layout_marginBottom="350dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="コメント設定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/make_edit_thema"
            android:hint="テーマ" android:layout_marginTop="116dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginEnd="80dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="80dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.509"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/make_edit_gropeName"
            android:hint="グループ名" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/make_edit_thema"
            app:layout_constraintVertical_bias="0.75"
            app:layout_constraintStart_toStartOf="@+id/make_edit_thema"/>
</android.support.constraint.ConstraintLayout>